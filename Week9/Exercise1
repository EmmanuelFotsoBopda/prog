#!/usr/bin/env python
# coding: utf-8

# In[6]:


class Person:
    def __init__(self, name, age):
        self.name = name
        self.age = age

    def introduce(self):
        # Base introduction method for all persons
        return f"Hello, my name is {self.name} and I am {self.age} years old."

class Student(Person):
    def __init__(self, name, age, student_id):
        # Initializing parent class attributes
        super().__init__(name, age)
        self.student_id = student_id

    def introduce(self):
        # Method overriding to include student-specific details
        base_intro = super().introduce()
        return f"{base_intro} I am a student with ID: {self.student_id}."

class Teacher(Person):
    def __init__(self, name, age, subject):
        # Initializing parent class attributes
        super().__init__(name, age)
        self.subject = subject

    def introduce(self):
        # Method overriding to mention the teaching subject
        base_intro = super().introduce()
        return f"{base_intro} I am a teacher and I teach {self.subject}."

# Testing the implementation
student = Student("Alice", 16, "S001")
teacher = Teacher("Mr. Smith", 35, "Mathematics")

print(student.introduce())
print(teacher.introduce())


