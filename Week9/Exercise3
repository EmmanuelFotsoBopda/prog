import os
import shutil

def manage_files():
    # 1. Show current directory
    print(f"Current Directory: {os.getcwd()}")

    folder_name = "lab_files"

    # 2. Create directory with safety check
    if not os.path.exists(folder_name):
        os.makedirs(folder_name)
        print(f"Folder '{folder_name}' created.")

    # 3. Create three empty files
    file_names = ["test1.txt", "test2.txt", "test3.txt"]
    for name in file_names:
        path = os.path.join(folder_name, name)
        with open(path, "w") as f:
            pass # Creating an empty file
    print("Empty files created.")

    # 4. List files in folder
    print(f"Files in '{folder_name}': {os.listdir(folder_name)}")

    # 5. Rename one file
    old_path = os.path.join(folder_name, "test1.txt")
    new_path = os.path.join(folder_name, "renamed_test.txt")
    if os.path.exists(old_path):
        os.rename(old_path, new_path)
        print("File renamed successfully.")

    # 6. Cleanup: Remove files and the folder
    for file in os.listdir(folder_name):
        os.remove(os.path.join(folder_name, file))
    os.rmdir(folder_name)
    print("Cleanup complete: Folder and files removed.")

if __name__ == "__main__":
    manage_files()


