#!/usr/bin/env python
# coding: utf-8

# In[6]:


class Book:
    def __init__(self, title, author, isbn):
        self.title = title
        self.author = author
        self.isbn = isbn

    def __str__(self):
        # String representation of book information
        return f"'{self.title}' by {self.author} (ISBN: {self.isbn})"

class Library:
    def __init__(self):
        # Composition: Library contains a list of Book objects
        self.books = []

    def add_book(self, book):
        self.books.append(book)
        print(f"Added: {book.title}")

    def remove_book(self, title):
        # Filter list to remove book by title
        for book in self.books:
            if book.title == title:
                self.books.remove(book)
                print(f"Removed: {title}")
                return
        print(f"Book '{title}' not found.")

    def list_books(self):
        print("\n--- Library Collection ---")
        for book in self.books:
            print(book)

    def search_book(self, title):
        # Search logic using title match
        results = [book for book in self.books if title.lower() in book.title.lower()]
        return results

# Testing the library system
my_library = Library()
my_library.add_book(Book("1984", "George Orwell", "111"))
my_library.add_book(Book("The Hobbit", "J.R.R. Tolkien", "222"))
my_library.add_book(Book("Python Basics", "John Doe", "333"))

my_library.list_books()
my_library.remove_book("1984")
my_library.list_books()


