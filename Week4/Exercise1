#!/usr/bin/env python
# coding: utf-8

# In[ ]:


# Sample data provided in the lab instructions [cite: 225]
login_attempts = [
    ("alice", "success"),
    ("bob", "failed"),
    ("bob", "failed"),
    ("charlie", "success"),
    ("bob", "failed"),
    ("alice", "failed")
]

print("Checking login attempts...")

# Dictionary to track failed attempts per user [cite: 237]
failed_counts = {}

for user, status in login_attempts:
    if status == "failed":
        # Increment failure count for the specific user [cite: 222]
        failed_counts[user] = failed_counts.get(user, 0) + 1

# Generate alert for users with 3 or more failures [cite: 223, 237]
for user, count in failed_counts.items():
    if count >= 3:
        print(f"ALERT: User '{user}' has {count} failed login attempts")

print("Security check complete")

